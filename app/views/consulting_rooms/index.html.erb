<%= render 'shared/navbar_devise' %>

<div class="container" style="padding-top: 100px;">
  <div class="row">
    <div class="col-lg-6 col-md-6 col-sm-12 mb-2">
      <div class="row">
        <h2 class="titulo">Consultorios Veterinarios</h2>
      </div>
      <div class="row">
        <div>
          <% if user_signed_in? %>
            <% if !current_user.is_vet %>
              <div class="searcher">
                <%= form_tag consulting_rooms_path, method: :get do %>
                  <%= text_field_tag :query,
                      params[:query],
                      class: "form-control",
                      id: 'buscar',
                      placeholder: "Buscar veterinarios"
                    %>
                  <%= submit_tag "", class: "fas fa-search size-button-search", id: "search-f" %>
                <% end %>
              </div>
            <% end %>
          <% else %>
            <div class="searcher">
              <%= form_tag consulting_rooms_path, method: :get do %>
                <%= text_field_tag :query,
                    params[:query],
                    class: "form-control",
                    id: 'buscar',
                    placeholder: "Buscar veterinarios"
                  %>
                <%= submit_tag "", class: "fas fa-search size-button-search", id: "search-f" %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
      <div id="global" class="row">
      <%# Lista de consultorios %>
        <%= render 'shared/consulting_list' %>
      </div>
    </div>
    <div id="map" class="col-lg-5 col-md-5 col-sm-12 map-custom"
      style="width: 100%; height: 600px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>
