<%= render 'shared/navbar_devise' %>
<div class="container">
</div>
  <div class="container mb-3" style="padding-top: 100px;">
  <h2>Consultorios Veterinarios:</h2>

  <%# Semillas temporales %>
  <% forma_pago = ['efectivo', 'punto de venta', 'zelle', 'paypal'] %>
  <% if user_signed_in? %>
      <% if !current_user.is_vet %>
        <div class="searcher">
          <%= form_tag consulting_rooms_path, method: :get do %>
            <%= text_field_tag :query,
              params[:query],
              class: "form-control",
              id: 'buscar',
              placeholder: "Buscar veterinarios"
            %>
            <%= submit_tag "", class: "fas fa-search size-button-search", id: "search-f" %>
          <% end %>
        </div>
      <% end %>
    <% else %>
      <div class="searcher">
        <%= form_tag consulting_rooms_path, method: :get do %>
          <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            id: 'buscar',
            placeholder: "Buscar veterinarios"
          %>
          <%= submit_tag "", class: "fas fa-search size-button-search", id: "search-f" %>
        <% end %>
      </div>
    <% end %>
</div>
<div class="container d-flex mb-4" style="justify-content: space-between">
  <div class="container">
      <% @query_rooms.each_with_index do |room, index| %>
        <% if user_signed_in? %>
          <%if @user.is_vet%>
          <%# Cambiar esto, el vet no pasa por aqui %>
          <div class="container">
            <div class="mb-2">
              <li>
                <%= link_to room.name, class: "text-secondary" %><span class="mx-3">
                <%= link_to edit_consulting_room_path(room) do %>
                  <i class="fas fa-edit"></i>
                <% end %>
                <%= link_to room, method: :delete, remote: true, data: { confirm: "Estas seguro que deseas eliminar?" }, style:"color:red" do %>
                  <i class="far fa-trash-alt"></i>
                <% end %>
              </li>
            </div>
          </div>
          <% else %>
            <div class="accordion" id="accordionExample">
              <div class="card">
                <div class="card-header consult-room-card" id="heading <%= index %> " onClick="fitToCard(event, <%= room.latitude %>, <%= room.longitude %>)">
                  <h2 class="mb-0">
                    <a class="btn btn-block text-left" type="button" data-toggle="collapse" data-target="#collapse<%= index %>" aria-expanded="true" aria-controls="collapse<%= index %>">
                      <h3><%= room.name %></h3>
                      <span class="consult-room-distance">a 5 km</span>
                      <h5><%= room.address %></h5>
                    </a>
                  </h2>
                </div>
                <div id="collapse<%= index %>" class="collapse" aria-labelledby="heading<%= index %>" data-parent="#accordionExample">
                  <div class="card-body">
                    <% 5.times do %>
                      <%= room.description %>
                      <% end %>
                      <div>
                        <div>
                          <h5>Atendemos:</h5>
                            <% especie_mascotas = room.animal.split(" ") %>
                            <% especie_mascotas.each do |especie| %>
                              <span class="badge badge-pill badge-vetlove"><%= especie %>s</span>
                            <% end %>
                          <h5>Aceptamos:</h5>
                            <% forma_pago.each do |pagos| %>
                              <span class="badge badge-pill badge-vetlove"><%= pagos %></span>
                            <% end %>
                          </div>
                          <div>
                            <%= link_to "Solicitar cita", new_consulting_room_booking_path(room), class: 'button-vetlove button-vetlove-card-pos' %>
                          </div>
                      </div>
                    </div>
                </div>
              </div>
            <%end%>
          <%else%>
          <%# Es lo mismo de arriba %>
            <div class="accordion" id="accordionExample">
              <div class="card">
                <div class="card-header consult-room-card" id="heading<%= index %>" onClick="fitToCard(event, <%= room.latitude %>, <%= room.longitude %>)">
                  <h2 class="mb-0">
                    <a class="btn btn-block text-left" type="button" data-toggle="collapse" data-target="#collapse<%= index %>" aria-expanded="true" aria-controls="collapse<%= index %>">
                      <h3><%= room.name %></h3>
                      <span class="consult-room-distance">a 5 km</span>
                      <h5><%= room.address %></h5>
                    </a>
                  </h2>
                </div>
                <div id="collapse<%= index %>" class="collapse" aria-labelledby="heading<%= index %>" data-parent="#accordionExample">
                  <div class="card-body">
                    <% 5.times do %>
                      <%= room.description %>
                      <% end %>
                      <div>
                        <div>
                          <h5>Atendemos:</h5>
                           <% especie_mascotas = room.animal.split(" ") %>
                            <% especie_mascotas.each do |especie| %>
                              <span class="badge badge-pill badge-vetlove"><%= especie %>s</span>
                            <% end %>
                          <h5>Aceptamos:</h5>
                            <% forma_pago.each do |pagos| %>
                              <span class="badge badge-pill badge-vetlove"><%= pagos %></span>
                            <% end %>
                          </div>
                          <div>
                            <%= link_to "Solicitar cita", new_consulting_room_booking_path(room), class: 'button-vetlove button-vetlove-card-pos' %>
                          </div>
                      </div>
                    </div>
                </div>
              </div>
      <% end %>
    </div>
    <% end %>
    <div class="container">
      <%if user_signed_in?%>
          <%if @user.is_vet%>
              <p><%= link_to "Añadir Consultorio", new_consulting_room_path, class:"btn btn-primary", style:"border-radius: 10px" %></p>
          <%end%>
      <%end%>
    </div>
  </div>
  <div id="map"
      style="width: 100%; height: 500px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
