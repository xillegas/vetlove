<div class="d-sm-flex align-items-center justify-content-between mb-3">
  <p class="h2 m-0 text-gray-800">Edicion de Mascota</p>
</div>
<p class="text-secondary">Ingresa los datos a modificar</p>
<%= simple_form_for [ @pet] do |f| %>
  <%= f.input :name, label: "Nombre de tu mascota" %>
  <%= f.input :gender, placeholder: @pet.gender, label: "Genero de tu mascota", disabled: true %>
  <%= f.input :birthdate, as: :string, required: false, input_html: {class: "datepicker"}, disabled: true %>
  <%= f.input :species, collection: SPECIES, label: "Especie de tu mascota" %>
  <%= f.submit "Editar Mascota", class: "btn btn-primary my-3" %>
<% end %>
<%= link_to pets_path do %>
  <i class="fas fa-arrow-left"></i>
  <span>Volver</span></a>
<% end %>
