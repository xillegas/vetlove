<div class="container">
  <h2>Due√±o de la mascota</h2>
  <strong><%= @pet.user.first_name %></strong>
  <br>
  <h3>Nombre de la mascota:</h3>
  <p><%= @pet.name %></p>

  <h3>Genero:</h3>
  <p><%= @pet.gender %></p>

  <h3>Fecha de nacimiento:</h3>
  <p><%= I18n.l(@pet.birthdate.to_date, format: '%A, %B %d, %Y') %></p>

