  <p><%= @pet.species %></p>


  <%= link_to "Editar", edit_pet_path(@pet), class: "text-danger" %> |
  <%= link_to "Eliminar",
              @pet,
              method: :delete,
              remote: true,
              data: { confirm: "Estas seguro que deseas eliminar?" },
              class: "text-danger" %></p>


  <%= link_to "Volver a lista principal de mascotas", pets_path %>
</div>
