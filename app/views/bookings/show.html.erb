<div class="d-sm-flex align-items-center justify-content-between mb-4">
  <p class="h1 mb-0 text-gray-800">Reserva</p>
</div>
<div class="list-group my-4">
  <div class="list-group-item list-group-item-action bordes">
    <div class="d-flex justify-content-between align-items-center">
      <div>
        <h3><%= @booking.consulting_room.name %></h3>
        <p class="booking-small"><%= @booking.consulting_room.specific_address %></p>
      </div>
      <p class="booking-title">Fecha de Consulta:<br>
        <%= DateTime.parse(@booking.date.to_s).strftime("%F") %> </p>
      <p class="booking-title">Hora de Consulta:<br>
        <%= DateTime.parse(@booking.date.to_s).strftime("%I:%M%p")  %></p>
    </div>
    <hr>
    <div class="d-flex justify-content-start mb-1">
      <div class="bordright-gray pr-3">
        <div class="d-flex flex-row">
          <div>
            <% if @booking.pet.photo.attached? %>
                <%# cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle navbar-vetlove-user", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
                <%= cl_image_tag @booking.pet.photo.key, class: "rounded-circle", height: 60, width: 60, crop: :fill %>
              <% else %>
                <%= image_tag "https://i.pinimg.com/136x136/21/a4/a0/21a4a0e07bd24643aca0fcaa7af75105.jpg",  class: "rounded-circle", height: 60, width: 60, crop: :fill %>
              <% end %>
          </div>
          <div class="ml-3">
            <p class="booking-subtitle"><strong><%= @booking.pet.name.capitalize %></strong></p>
            <p class="booking-small">
            <span class='vetlove-text-color'><i class="fas fa-paw"></i></span>
            <%= @booking.pet.species.capitalize %></p>
            <p class="booking-small">
            <span class='vetlove-text-color'><i class="fas fa-venus-mars"></i></span>
            <%= @booking.pet.gender.capitalize %></p>
          </div>
        </div>
        <p class="booking-small"><strong>Fecha de Nacimiento:</strong> <%= @booking.pet.birthdate %></p>
        <p class="booking-small"><strong>Dueño:</strong> <%= @booking.pet.user.first_name.capitalize %> <%= @booking.pet.user.last_name.capitalize %></p>
      </div>
      <div class="d-flex flex-row ml-3">
        <div>
          <% if @booking.consulting_room.user.photo.attached? %>
            <%= cl_image_tag @booking.consulting_room.user.photo.key, class: "rounded-circle", height: 60, width: 60, crop: :fill %>
          <% else %>
            <%= image_tag "https://i.pinimg.com/136x136/21/a4/a0/21a4a0e07bd24643aca0fcaa7af75105.jpg",  class: "rounded-circle", height: 60, width: 60, crop: :fill %>
          <% end %>
        </div>
        <div class="ml-3">
        <p class="booking-small"><strong>Veterinario:</strong> <%= @booking.consulting_room.user.first_name.capitalize %> <%= @booking.consulting_room.user.last_name.capitalize %></p>
        <p class="booking-small"><strong>Teléfono: </strong><%= @booking.consulting_room.user.phone_number %></p>
        <p class="booking-small"><strong>Email: </strong><%= @booking.consulting_room.user.email %></p>
        </div>
      </div>
    </div>
    <p class="note-booking">Nota: Los datos proporcionados por este medio son para uso informativo</p>
  </div>
</div>
<div class="volver">
  <%= link_to bookings_path do %>
    <i class="fas fa-arrow-left"></i>
    <span>Volver</span></a>
  <% end %>
</div>
