<%= render 'shared/navbar_devise' %>
<div class="container main-login">
  <div class="row login-container">
    <div class="col-lg-6 col-md-6 d-sm-none d-none d-md-block d-lg-block login-form-img">
    </div>
    <div class="col-lg-6 col-md-6 col-sm-12 login-div">
      <div class="card login-form">
        <h2>Inicia sesión</h2>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" },
                        label: "Contraseña" %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
          <div class="form-actions text-center mb-3">
            <%= f.button :submit, "Iniciar sesión", class: "btn btn-primary "%>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
